{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"removeComments": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"rootDir": "./",
		"declaration": true,
		"lib": ["es2021"],
		"paths": {
			"@src/*": ["src/*"],
			"@types/*": ["src/types/*"]
		}
	},
	"include": ["src/**/*", "src/types", "src/index.ts", "local/**/*", "tests/**/*"],
	"exclude": ["node_modules", "dist"]
}
